@model IEnumerable<BeeOrganizer.Models.Dogodek>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lokacija)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drustvo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lokacija)
            </td>
            <td>
                @if (item.Opis.Length >50)
                {
                    Write(item.Opis.Substring(0, 50)); 
                    Write("...");
                }else{
                    Write(Html.DisplayFor(modelItem => item.Opis));
                }
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drustvo.Naziv)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> 
                @if (item.Drustvo.Id == ViewBag.UserDrustvoId)
                {
                     <a asp-action="Edit" asp-route-id="@item.ID"> | Edit</a> 
                }
                <!--| <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>-->
            </td>
        </tr>
}
    </tbody>
</table>
